{
  "name": "@asyarb/use-static-query",
  "version": "0.1.3",
  "description": "Data fetching hook tailored for use in static sites.",
  "repository": "https://github.com/asyarb/use-cached-query",
  "author": "Anthony Yarbrough <asyarb@hawaii.edu>",
  "license": "MIT",
  "main": "dist/use-static-query.js",
  "module": "dist/use-static-query.module.js",
  "types": "dist/use-static-query.d.ts",
  "exports": {
    ".": "./dist/index.modern.js",
    "./next": "./dist/next.modern.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "microbundle src/index.ts src/next.tsx --jsx React.createElement --format modern,es,cjs -o dist",
    "postbuild": "cp ./dist/src/*.ts ./dist && rimraf ./dist/src && rimraf ./dist/tests && mv ./dist/index.d.ts ./dist/use-static-query.d.ts",
    "watch": "yarn build --watch --no-compress",
    "test": "jest",
    "prepare": "yarn build",
    "release": "standard-version"
  },
  "dependencies": {
    "react-is": "^17.0.1",
    "react-ssr-prepass": "^1.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@types/testing-library__react": "^10.2.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "microbundle": "^0.13.0",
    "next": "^10.0.4",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-ssr-prepass": "^1.2.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^16.12"
  },
  "prettier": {
    "semi": false,
    "printWidth": 80,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
